<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmet.notsepetim.ActivityMain">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_background"
        android:scaleType="centerCrop"
        />
    <include layout="@layout/toolbar" android:id="@+id/toolbar"></include>

    <com.example.ahmet.notsepetim.data.NotesRecyclerView
        android:id="@+id/rv_not_listesi"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.example.ahmet.notsepetim.data.NotesRecyclerView>

    <include android:id="@+id/bos_liste" layout="@layout/bos_liste"></include>

</RelativeLayout>
