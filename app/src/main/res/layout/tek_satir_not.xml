<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/btn_text_size">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_event_note"
        android:tint="@color/colorIcons"
        />
    <TextView
        android:id="@+id/et_not_icerik"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:text="NOTLAR"
        android:textSize="18dp"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/btn_text_padding_yukari_asagi"
        android:layout_marginRight="@dimen/btn_text_padding_yukari_asagi"


        />
    <TextView
        android:id="@+id/et_not_tarih"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_weight="7"

        android:text="28.02.2018"
        android:textSize="12dp"
        android:gravity="center"

        android:layout_gravity="end"
        android:textAlignment="textEnd"
        />
</LinearLayout>